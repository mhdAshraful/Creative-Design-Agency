{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"], // ðŸ‘ˆ project root
			"@app/*": ["./app/*"], // ðŸ‘ˆ for app router files
			"@public/*": ["./public/*"], // ðŸ‘ˆ for assets like images/icons
			"@components/*": ["./components/*"], // ðŸ‘ˆ add when you create a components folder
			"@lib/*": ["./lib/*"], // ðŸ‘ˆ for utilities or helpers
			"@context/*": ["./context/*"] // ðŸ‘ˆ for React contexts
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
